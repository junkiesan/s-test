<div class="hero">
  <h1>Welcome on Quizzator !</h1>
</div>
<div class="container">
  <div class="quizzes">
    <% @quizzes.each do |quizz| %>
      <div class="quizz">
        <h3> <%= quizz.title %> </h3>
        <p> <%= quizz.description %> </p>
        <%= link_to 'Play', quiz_path(quizz.id), class: 'button' %>
      </div>
    <% end %>
  </div>
</div>
